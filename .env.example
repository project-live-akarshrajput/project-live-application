# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001
NODE_ENV=development

# MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/livechat?retryWrites=true&w=majority

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-min-32-chars-here

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Redis (Upstash recommended for production)
REDIS_URL=redis://localhost:6379
# For Upstash:
# REDIS_URL=rediss://default:password@your-redis.upstash.io:6379

# TURN/STUN Servers (Optional - for production NAT traversal)
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_SERVER_USERNAME=username
TURN_SERVER_CREDENTIAL=credential
